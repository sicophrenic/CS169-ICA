<div class="content">
<% if @search %>
  <h1>Searching for "<%= @search %>"</h1>
  <h2>People <%= link_to 'New Person', new_contact_path, :class => 'btn' %></h2>
<!--  <h2>People <a class="btn" href=new_contact_path>New Person</a></h2> -->
  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Occupation</th>
        <th>Phone Number</th>
      </tr>
    </thead>
    <tbody>
    <% @people.each_with_index do |person, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= link_to person.first_name, contact_path(person.id) %></td>
        <td><%= person.last_name %></td>
        <td><%= person.occupation %></td>
        <td><%= person.phone_numbers.first.label + ': ' + person.phone_numbers.first.info %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
 	<h1>Welcome!</h1>
	<p>Some kind of welcome message that briefly explains how to use the CRM</p>
