      <%# end %>
      </td>
      <td>
      <%# if person.email_address and person.email_address.info %>
        <%#= "#{person.email_address.label}: #{person.email_address.info}" %>
      <%# end %>
      </td> -->
    </tr>
  <% end %>
  </tbody>
</table>
