<div class='navbar navbar-fixed-top'>
  <div class='navbar-inner'>
    <div class='container'>
      <%= link_to 'Inner City Advisors', root_path, :class => 'brand' %>
      <%= form_tag search_path, :method => :get, :class => 'navbar-search' do %>
        <%= text_field_tag 'search', nil,  :class => 'search-query span3' %>
        <%= submit_tag 'Search', :class => "btn", :id => 'Search'  %>
      <% end %>
      <ul class='nav'>
        <li><%= link_to 'New Person', new_person_path %></li>
        <li><%= link_to 'New Company', new_company_path %></li>
      </ul>
      <ul class='nav pull-right'>
        <li><a href='/about'>About</a></li>
        <li class='divider-vertical'></li>
				<% if current_user %>
					<li><a href='/signout'>Sign Out</a></li>
				<% else %>
          <li class='dropdown'>
            <a href='#' class='dropdown-toggle' data-toggle='dropdown'>Sign In<b class='caret'></b></a>
            <ul class='dropdown-menu'>
              <li><a href='/auth/twitter' class='auth_provider'>Twitter</a></li>
              <li><a href='/auth/google' class='auth_provider'>OpenID</a></li>
            </ul>
          </li>
				<% end %>
      </ul>
    </div><!-- .container -->
  </div><!-- .navbar-inner -->
</div><!-- .navbar -->

<% if flash[:notice] %>
  <%= render :partial => 'shared/success', :locals => { :notice => flash[:notice] } %>
<% end %>
<% if flash[:error] %>
  <%= render :partial => 'shared/error', :locals => { :error => flash[:error] } %>
<% end %>
