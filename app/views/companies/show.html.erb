<h2><%= @company.type %></h2>
<h1><%= @company.name %></h1>
<h3><%= "#{@company.representative_role}: " %><%= link_to @company.representative.full_name, person_path(@company.representative), :method => :get %></h3>
<dl>
  <%= render :partial => 'shared/show_phone_numbers', :locals => { :contact => @company, :contact_information => 'phone_number' } %>
  <%#= render :partial => 'show_email_addresses', :locals => { :person => @person } %>
  <%#= render :partial => 'show_physical_addresses', :locals => { :person => @person } %>
</dl>
<%= link_to 'Edit', edit_company_path(@company), :class => 'btn' %>
<%= link_to 'Delete', company_path(@company), :method => :delete, :confirm => 'Are you sure?', :class => 'btn' %>
