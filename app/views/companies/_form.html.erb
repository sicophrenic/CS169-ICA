<%= form_for company, :html => {:class => 'form-horizontal'} do |p| %>

  <div class='control-group'>
    <%= p.label :type, :class => 'control-label' %>
    <div class='controls'>
      <%= p.select :type, { 'Education Company' => 'EducationCompany',
                            'Portfolio Company' => 'PortfolioCompany',
                            'Professional Service Provider' => 'ProfessionalServiceProvider' } %>
    </div>
  </div>

  <div class='control-group'>
    <%= p.label :name, :class => 'control-label' %>
    <div class='controls'>
      <%= p.text_field :name %>
    </div>
  </div>

  <div class='control-group'>
    <%= p.label :representative_id, :class => 'control-label' %>
    <div class='controls'>
      <%= p.text_field :representative_id %>
    </div>
  </div>

  <div class='control-group'>
    <%= p.label :representative_role, :class => 'control-label' %>
    <div class='controls'>
      <%= p.text_field :representative_role %>
    </div>
  </div>
